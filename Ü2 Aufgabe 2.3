 Sequences <- expand.grid(seq_1, seq_2)
 
 #creating matrix
 matrix(score(pairwiseAlignment(Sequences$seq_1, Sequences$seq_2, substitutionMatrix = "BLOSUM62")),
        nrow = length(seq_1))
 
#or create txt format
BLOSUM62(seq_1, seq_2, outFormat = "txt")
 
